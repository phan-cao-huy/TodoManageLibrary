@model IEnumerable<ManageLibrary.Models.Reader>

@{
    ViewData["Title"] = "Danh sách Độc Giả";
    Layout = "~/Views/Shared/Layout.cshtml";
    var currentFilter = (string?)ViewData["CurrentFilter"] ?? string.Empty;
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <form asp-action="Index" method="get" class="row g-2 align-items-end mb-3">
        <div class="col-sm-8 col-md-9">
            <label for="search" class="form-label">Tìm độc giả (Mã / Họ tên / SĐT / Khoa)</label>
            <input type="text" class="form-control" id="search" name="search" value="@currentFilter" placeholder="VD: DG123, Nguyễn Văn A, 09..., CNTT" />
        </div>
        <div class="col-sm-4 col-md-3 text-end">
            <div class="d-inline-flex gap-2 flex-nowrap">
                <button type="submit" class="btn btn-primary">Tìm</button>
                <a asp-action="Index" class="btn btn-secondary">Đặt lại</a>
                <a asp-action="Create" class="btn btn-success">Thêm</a>
            </div>
        </div>
    </form>

    <div class="table-responsive" style="max-height:60vh; overflow-y:auto;">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark text-center" style="position: sticky; top: 0; z-index: 1;">
                <tr>
                    <th>Mã Độc Giả</th>
                    <th>Họ Và Tên</th>
                    <th>Loại Độc Giả</th>
                    <th>Số Điện Thoại</th>
                    <th>Bộ Môn/Khoa</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.ReaderId</td>
                        <td class="text-start" style="min-width: 220px;">@item.FullName</td>
                        <td>@item.TypeOfReader</td>
                        <td>@item.Telephone</td>
                        <td>@item.Department</td>
                        <td class="text-center" style="width: 200px;">
                            <a asp-action="Edit" asp-route-id="@item.ReaderId" class="btn btn-warning btn-sm" title="Sửa">Sửa</a>
                            <button type="button" class="btn btn-info btn-sm ms-1" data-bs-toggle="modal"
                                    data-bs-target="#detailsModal-@item.ReaderId" title="Chi tiết">Chi tiết</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @foreach (var item in Model)
    {
        <div class="modal fade" id="detailsModal-@item.ReaderId" tabindex="-1" aria-labelledby="modalLabel-@item.ReaderId" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalLabel-@item.ReaderId">Chi tiết Độc Giả: @item.FullName</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <dl class="row">
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.ReaderId)</dt>
                            <dd class="col-sm-9">@item.ReaderId</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.FullName)</dt>
                            <dd class="col-sm-9">@item.FullName</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.DateOfBirth)</dt>
                            <dd class="col-sm-9">@(item.DateOfBirth?.ToString("dd/MM/yyyy") ?? "-")</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.NationalId)</dt>
                            <dd class="col-sm-9">@item.NationalId</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.TypeOfReader)</dt>
                            <dd class="col-sm-9">@item.TypeOfReader</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.Email)</dt>
                            <dd class="col-sm-9">@item.Email</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.Telephone)</dt>
                            <dd class="col-sm-9">@item.Telephone</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.Address)</dt>
                            <dd class="col-sm-9">@item.Address</dd>
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => item.Department)</dt>
                            <dd class="col-sm-9">@item.Department</dd>
                        </dl>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
