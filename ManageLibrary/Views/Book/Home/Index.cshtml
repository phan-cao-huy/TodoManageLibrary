@{
    ViewData["Title"] = "Home Page";
}

@{
    ViewData["Title"] = "Trang chủ";
    // Giả sử bạn dùng một layout riêng cho Client,
    // Nếu không, hãy trỏ về _Layout.cshtml
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-5 mb-4 bg-light text-center">
    <h1 class="display-5 fw-bold">Chào mừng đến với Thư Viện</h1>
    <p class="fs-4">Nơi tri thức bắt đầu. Tìm kiếm hàng ngàn đầu sách ngay.</p>

    <form class="d-flex justify-content-center" style="max-width: 600px; margin: 0 auto;" action="/Search" method="get">
        <input class="form-control form-control-lg me-2" type="search" name="query" placeholder="Nhập tên sách, tác giả...">
        <button class="btn btn-primary btn-lg" type="submit">Tìm</button>
    </form>
</div>

