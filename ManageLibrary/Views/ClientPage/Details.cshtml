@* File: Views/ClientPage/Details.cshtml *@
@model ManageLibrary.Models.Book
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    ViewData["Title"] = Model.Name; 
}

<div class="container mt-4 mb-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            @* Sử dụng "card" để tạo giao diện "đóng hộp"
              tương tự như "modal-content"  trong file Loan/Index.cshtml 
            *@
            <div class="card shadow-sm">

                @* Phần Header của Card, tương tự "modal-header"  *@
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="mb-0">@Model.Name</h2>
                </div>

                @* Phần Body của Card, tương tự "modal-body"  *@
                <div class="card-body p-4">
                    <h4 class="text-muted mb-3">@(Model.Author?.Name ?? "Không rõ tác giả")</h4>

                    @* Sử dụng "table-bordered" giống như bảng chi tiết
                      trong file Loan/Index.cshtml 
                    *@
                    <table class="table table-bordered table-striped align-middle">
                        <tbody>
                            <tr>
                                <th style="width: 25%;">Mã sách</th>
                                <td>@Model.BookId</td>
                            </tr>
                            <tr>
                                <th>Thể loại</th>
                                <td>@(Model.Category?.Name ?? "N/A")</td> 
                            <tr>
                                <th>Nhà xuất bản</th>
                                <td>@(Model.Publisher?.Name ?? "N/A")</td> 
                            </tr>
                            <tr>
                                <th>Năm xuất bản</th>
                                <td>@Model.YearOfPublic</td> 
                            </tr>
                            <tr>
                                <th>Số trang</th>
                                <td>@Model.NumOfPage</td> 
                            </tr>
                            <tr>
                                <th>Giá bìa</th>
                                <td>@Model.Cost?.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td> 
                            <tr>
                                <th>Vị trí</th>
                                <td>@(Model.Position ?? "N/A")</td>
                            </tr>
                            <tr>
                                <th>Số lượng còn lại</th>
                                <td>@Model.Quantity</td> 
                            </tr>
                        </tbody>
                    </table>

                    <hr>

          
                    <a asp-controller="ClientPage" asp-action="Index" class="btn-primary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>